<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:background="@color/colorPrimary">
            
            <TextView
                android:id="@+id/nomeCliente"
                android:text="Olá, Nome do Cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/tamFonteMenor">
            </TextView>
            
        </LinearLayout>
    
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            tools:context=".PrincipalActivity">
        
            <TextView
                android:text="0.000000000 BTC"
                android:id="@+id/saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/tamFonteSaldo" />
            <TextView
                android:text="R$ 000,00"
                android:id="@+id/saldoBrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/tamFonteSaldoMenor" />

        
            <Button
                android:text="Aguardando Cotação"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/cotacao"
                />
        
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
        
                <ImageButton
                    android:src="@drawable/enviar"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:padding="2dp"
                    android:layout_width="@dimen/tamButton"
                    android:layout_height="@dimen/tamButton"
                    android:onClick="telaEnvio"
                    />

                <ImageButton
                    android:src="@drawable/receber"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:padding="2dp"
                    android:layout_width="@dimen/tamButton"
                    android:layout_height="@dimen/tamButton"
                    android:onClick="telaRecebimento"
                    />

                <ImageButton
                    android:src="@drawable/pagar"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:padding="2dp"
                    android:layout_width="@dimen/tamButton"
                    android:layout_height="@dimen/tamButton"
                    android:onClick="telaPagamento"
                    />
        
            </LinearLayout>
        
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
        
                <ImageButton
                    android:src="@drawable/extrato"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:padding="2dp"
                    android:layout_width="@dimen/tamButton"
                    android:layout_height="@dimen/tamButton"
                    android:onClick="telaExtrato"
                    />
                    
                <ImageButton
                    android:src="@drawable/giftcard"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:padding="2dp"
                    android:layout_width="@dimen/tamButton"
                    android:layout_height="@dimen/tamButton"
                    />
        

        
            </LinearLayout>
        
        </LinearLayout>
    
    </LinearLayout>

</ScrollView>